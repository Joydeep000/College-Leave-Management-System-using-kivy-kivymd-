MDScreen:
    MDGridLayout:
        cols:1
        size_hint: 5,5
        pos_hint: {"center_x":1,"center_y":0.65}
        Image:
            source: "pexels-codioful-(formerly-gradienta)-7130498.jpg"

    MDBoxLayout:
        orientation: "vertical"
        padding: "20dp"
        spacing: "10dp"
        md_bg_color:1,1,1,1

        Image:
            source: "1674978942653-01.jpeg"
            size_hint: None, None
            size: "200dp", "200dp"
            pos_hint: {"center_x": 0.5}

        MDLabel:
            text : "Please sign in to continue..."
            font_size : "14sp"
            font_name : "Poppins Bold Italic 700.ttf"
            halign : "center"
            color: rgba(0, 51, 102)



        MDTextField:
            id: email_phn
            markup: True
            hint_text: "Email ID or Phone number"
            icon_right : "account"
            mode: "rectangle"
            color_mode: "Custom"
            current_hint_text_color :1, 1, 1, 1

            size_hint_x : None
            width : 250
            #line_color_normal: [0, 76, 153, 1]
            line_color_focus: (0, 0, 0, 1)  # Light line color (RGB: 255, 255, 255)
            text_color: (1, 1, 1, 1)  # Light text color (RGB: 255, 255, 255)
            helper_text_color: (0, 0, 0, 1)  if self.focus else (255, 255, 255, 1)

        MDTextField:
            id: passwod
            password: True
            hint_text: "Password*"
            helper_text_mode: "on_focus"
            mode: "rectangle"

            size_hint_x : None
            width : 250
            #line_color_normal: [0, 76, 153, 1]
            line_color_focus: (0, 0, 0, 1)  # Light line color (RGB: 255, 255, 255)
            text_color: (0, 0, 0, 1)  # Light text color (RGB: 255, 255, 255)
            helper_text_color: (0, 0, 0, 1)  if self.focus else (255, 255, 255, 1)


        MDBoxLayout:
            orientation:"horizontal"
            size_hint_y: None
            height: self.minimum_height

            MDCheckbox:
                id: password_checkbox
                pos_hint: {"center_x": 0.5, "center_y": 0.4}
                size_hint: None, None
                size: dp(48), dp(48)
                on_active: app.toggle_password_visibility(passwod)
            MDLabel:
                text: "Show Password"
                pos_hint: {"center_x": 0.6, "center_y": 0.4}

        MDLabel:
            text : "Login as :"
            font_size : "13sp"
            font_name : "Poppins Medium 500.ttf"

            halign : "center"
            color: rgba(0, 0, 0)
        Spinner:
            id: login_as
            size_hint: None, None
            size: dp(190), dp(30)
            text: "Select"
            background_color: "blue"

            font_size: "18dp"
            values: ["Admin", "Teaching Employee", "Non-Teaching Employee"]
        MDFillRoundFlatButton:
            text: "LOGIN"

            size_hint: 0.4,0.00
            on_release:
                app.check_login(email_phn.text,login_as.text,password.text)

        MDLabel:
            text : "New user->"
            font_size : "14sp"


            halign : "center"
            color: rgba(0, 102, 204)
        MDLabel:
            text : "---------------------------------------- OR -----------------------------------------"
            font_size : "12.3sp"


            halign : "center"
            color: rgba(0, 76, 153)
        MDTextButton:
            text: "sign up"
            theme_text_color: "Custom"
            color: rgba(0, 0, 0)
            font_size : "14sp"

            on_press: root.manager.current = "signup"
        MDTextButton:
            text: "Forgot password?"
            theme_text_color: "Custom"
            color: rgba(0,0, 0)
            font_size : "13sp"

        MDGridLayout:
            cols:1
            size_hint: 0.57,0.57

            Image:
                source: "Untitled13_20230521164846.png"
        MDLabel:
            text : "Social Media Login"
            font_size : "12sp"


            halign : "center"
            color: rgba(0, 76, 153)
        MDBoxLayout:
            cols:1
            size_hint: 0.08,0.08

            Image:
                source: "google.png"



            MDTextField:
                hint_text: "Username"
                size_hint_x: None
                width: "300dp"

            MDTextField:
                hint_text: "Password"
                size_hint_x: None
                width: "300dp"
                password: True

            MDFlatButton:
                text: "Login"
                size_hint_x: None
                width: "200dp"
