MDScreen:
    name:"login"
    MDGridLayout:
        cols:1
        size_hint: 5,5
        pos_hint: {"center_x":1,"center_y":0.65}
        Image:
            source: "pexels-codioful-(formerly-gradienta)-7130498.jpg"
    MDLabel:
        text : "Please sign in to continue..."
        font_size : "14sp"
        font_name : "Poppins Bold Italic 700.ttf"
        pos_hint : {"center_x":0.36,"center_y": 0.70}
        halign : "center"
        color: rgba(0, 51, 102)



    MDTextField:
        id: email_phn
        markup: True
        hint_text: "Email ID or Phone number"
        icon_right : "account"
        mode: "rectangle"
        color_mode: "Custom"
        current_hint_text_color :1, 1, 1, 1
        pos_hint: {"center_x": 0.5, "center_y": 0.60}
        size_hint_x : None
        width : 250
        #line_color_normal: [0, 76, 153, 1]
        line_color_focus: (0, 0, 0, 1)  # Light line color (RGB: 255, 255, 255)
        text_color: (1, 1, 1, 1)  # Light text color (RGB: 255, 255, 255)
        helper_text_color: (0, 0, 0, 1)  if self.focus else (255, 255, 255, 1)

    MDTextField:
        id: passwod
        password: True
        hint_text: "Password*"
        helper_text_mode: "on_focus"
        mode: "rectangle"
        pos_hint: {"center_x": 0.5, "center_y": 0.48}
        size_hint_x : None
        width : 250
        #line_color_normal: [0, 76, 153, 1]
        line_color_focus: (0, 0, 0, 1)  # Light line color (RGB: 255, 255, 255)
        text_color: (0, 0, 0, 1)  # Light text color (RGB: 255, 255, 255)
        helper_text_color: (0, 0, 0, 1)  if self.focus else (255, 255, 255, 1)


    MDBoxLayout:
        orientation:"horizontal"
        size_hint_y: None
        height: self.minimum_height
        pos_hint:{"center_x": 0.5, "center_y": 0.4}
        MDCheckbox:
            id: password_checkbox
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            size_hint: None, None
            size: dp(48), dp(48)
            on_active: app.toggle_password_visibility(passwod)
        MDLabel:
            text: "Show Password"
            pos_hint: {"center_x": 0.6, "center_y": 0.4}

    MDLabel:
        text : "Login as :"
        font_size : "13sp"
        font_name : "Poppins Medium 500.ttf"
        pos_hint : {"center_x":0.16,"center_y": 0.34}
        halign : "center"
        color: rgba(0, 0, 0)
    Spinner:
        id: login_as
        size_hint: None, None
        size: dp(190), dp(30)
        text: "Select"
        background_color: "blue"
        pos_hint: {"center_x": 0.50, "center_y": 0.28}
        font_size: "18dp"
        values: ["Admin", "Teaching Employee", "Non-Teaching Employee"]
    MDFillRoundFlatButton:
        text: "LOGIN"
        pos_hint: {"center_x": 0.5, "center_y": 0.20}
        size_hint: 0.4,0.00
        on_release:
            app.check_login(email_phn.text,login_as.text,passwod.text)

    MDLabel:
        text : "New user->"
        font_size : "14sp"

        pos_hint : {"center_x":0.40,"center_y": 0.02}
        halign : "center"
        color: rgba(0, 102, 204)
    MDLabel:
        text : "---------------------------------------- OR -----------------------------------------"
        font_size : "12.3sp"

        pos_hint : {"center_x":0.50,"center_y": 0.14}
        halign : "center"
        color: rgba(0, 76, 153)
    MDTextButton:
        text: "sign up"
        theme_text_color: "Custom"
        color: rgba(0, 0, 0)
        font_size : "14sp"
        pos_hint : {"center_x":0.61,"center_y": 0.02}
        on_press: root.manager.current = "signup"
    MDTextButton:
        text: "Forgot password?"
        theme_text_color: "Custom"
        color: rgba(0,0, 0)
        font_size : "13sp"
        pos_hint : {"center_x":0.70,"center_y": 0.39}
        on_press:root.manager.current = "forgot"
    MDGridLayout:
        cols:1
        size_hint: 0.57,0.57
        pos_hint: {"center_x":0.49,"center_y":0.86}
        Image:
            source: "Untitled13_20230521164846.png"
    MDLabel:
        text : "Social Media Login"
        font_size : "12sp"

        pos_hint : {"center_x":0.49,"center_y": 0.10}
        halign : "center"
        color: rgba(0, 76, 153)
    MDGridLayout:
        cols:1
        size_hint: 0.08,0.08
        pos_hint: {"center_x":0.5,"center_y":0.06}
        Image:
            source: "google.png"