MDScreen:
    name: "leave_history_list"
    MDGridLayout:
        cols:1
        size_hint: 5,5
        pos_hint: {"center_x":1,"center_y":0.65}
        Image:
            source: "pexels-codioful-(formerly-gradienta)-7130498.jpg"

    MDFloatLayout:

        MDIconButton:
            icon : "arrow-left"
            pos_hint : {"center_y" :0.95}
            user_font_size: "30sp"        #back arrow
            text_color : rgba(26, 24, 58, 255)
            on_release:
                root.manager.transition.direction = 'left'
                app.goback()

        MDLabel:
            size_hint: (1, None)
            pos_hint :{"center_x": 0.51, "center_y": 0.9}
            color: rgba(0,0,200,255)
            markup: True
            text: "[size=25]Your Leave History[/size]"
            md_bg_color: 1, 1, 1, .1
            radius:[12,12,12,12]

        MDScrollView:
            md_bg_color: 1, 1, 1, .1
            size_hint:(1,9)
            pos_hint :{"center_x": 0.51, "center_y": 0.7}
            line_color: 0, 0, 1, 1
            radius: [12,12,20,20]

            MDList:
                id:container

