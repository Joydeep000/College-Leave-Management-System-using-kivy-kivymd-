MDScreen:
    name:"signup"
    MDGridLayout:
        cols:1
        size_hint: 3.5,2
        pos_hint: {"center_x":1,"center_y":0.52}
        Image:
            source: "pexels-codioful-(formerly-gradienta)-7130498.jpg"




    MDRectangleFlatButton:
        text : "OTP"
        pos_hint : {"center_x":0.15,"center_y": 0.71}
        size_hint:(0.001, 0.001)

        on_press:
            app.verify_otp()
            #app.send_by_thread()

    MDFloatLayout:
        #md_bg_color: 204/255, 255/255, 255/255,1
        MDLabel:
            text : "Registration"
            font_size : "20sp"
            font_name : "Poppins Bold 700.ttf"
            pos_hint : {"center_x":0.26,"center_y": 0.92}
            halign : "center"
            color: rgba( 32 ,32 , 32)
        MDLabel:
            text : "Fill out the form carefully"
            font_size : "14sp"
            pos_hint : {"center_x":0.55,"center_y": 0.88}
            color: rgba(96,96, 96)

        MDLabel:
            text : "Name*            "
            font_size : "15sp"
            font_name : "Poppins Bold 700.ttf"
            pos_hint : {"center_x":0.55,"center_y": 0.83}
            color: rgba(0,0,72, 255)

        MDFloatLayout:
            size_hint: 0.7, 0.8
            pos_hint: {"center_x":0.67, "center_y":0.83}
            MDTextField:
                id: full_name
                hint_text: "Full name"
                icon_left : "account"
                mode: "round"
                font_size:"12dp"
                icon_left_color : app.theme_cls.primary_color
                pos_hint : {'center_x': 0.54, 'center_y': 0.5}
                size_hint_x : None
                width : 175

        MDFloatLayout:
            size_hint: 0.7, 0.7
            pos_hint: {"center_x":0.67, "center_y":0.73}
            MDTextField:
                id: email_id
                hint_text: "abc@gmail.com"
                icon_left : "email"
                mode: "round"
                font_size:"12dp"
                icon_left_color : app.theme_cls.primary_color
                pos_hint : {'center_x': 0.54, 'center_y': 0.54}
                size_hint_x : None
                width : 175

            MDLabel:
                text : "Email              "
                font_size : "15sp"
                font_name : "Poppins Bold 700.ttf"
                pos_hint : {"center_x":0.12,"center_y": 0.54}
                color: rgba(0,0,72, 255)
            MDLabel:
                text : "Phone No.    "
                font_size : "15sp"
                font_name : "Poppins Bold 700.ttf"
                pos_hint : {"center_x":0.12,"center_y": 0.40}
                color: rgba(0,0,72, 255)




        MDFloatLayout:
            size_hint: 0.7, 0.7
            pos_hint: {"center_x":0.67, "center_y":0.7}

            MDTextField:
                id: phone_no
                hint_text: "Phone Number"
                mode: "round"
                helper_text_mode: "on_focus"
                font_size:"12dp"
                icon_left : "phone"
                icon_left_color : app.theme_cls.primary_color
                pos_hint : {'center_x': 0.54, 'center_y': 0.44}
                size_hint_x : None
                width : 175



            MDLabel:
                text : "Password*     "
                font_size : "15sp"
                font_name : "Poppins Bold 700.ttf"
                pos_hint : {"center_x":0.12,"center_y": 0.34}
                color: rgba(0,0,72, 255)



        MDFloatLayout:
            size_hint: 0.5, 0.5
            pos_hint: {"center_x":0.67, "center_y":0.7}
            orientation:"vertical"

            #MDIconButton:
                #text: 'Open Date Picker'
                #icon: "calendar"
                #on_release: app.open_date_picker('jdate')

            MDTextField:
                id: jdate
                hint_text: "D  / M  /Y  "
                icon_left : "clock"
                mode: "round"
                font_size:"12dp"
                icon_left_color : app.theme_cls.primary_color
                pos_hint : {'center_x': 0.54, 'center_y': 0.22}
                size_hint_x : None
                width : 175



            MDLabel:
                text : "Department "
                font_size : "15sp"
                font_name : "Poppins Bold 700.ttf"
                pos_hint : {"right": 0.61,"top": 0.61}
                color: rgba(0,0,72, 255)
        MDFloatLayout:
            size_hint: 0.7, 0.7
            pos_hint: {"center_x":0.67, "center_y":0.61}
            MDTextField:
                id: spinner_id3
                hint_text: "Department"
                icon_left : "home"
                mode: "round"
                font_size:"12dp"
                icon_left_color : app.theme_cls.primary_color
                pos_hint : {'center_x': 0.54, 'center_y': 0.24}
                size_hint_x : None
                width : 175


            MDLabel:
                text : "Designation "
                font_size : "15sp"
                font_name : "Poppins Bold 700.ttf"
                pos_hint : {"right": 0.61,"top": 0.63}
                color: rgba(0,0,72, 255)
        MDFloatLayout:
            size_hint: 0.7, 0.7
            pos_hint: {"center_x":0.67, "center_y":0.51}
            MDTextField:
                id: spinner_id4
                hint_text: "Designation"
                icon_left : "account-tie"
                mode: "round"
                font_size:"12dp"
                icon_left_color : app.theme_cls.primary_color
                pos_hint : {'center_x': 0.54, 'center_y': 0.27}
                size_hint_x: None
                width : 175





            MDRaisedButton:
                text: " Create Account "
                size_hint: 0.7,0.04
                md_bg_color: "blue"
                pos_hint : {"right": 0.60,"top": 0.00}
                on_press:
                    app.signup(full_name,email_id,phone_no,passwrd,jdate,spinner_id1,spinner_id2,spinner_id3,spinner_id4)
                    root.manager.transition.direction = "left"

            MDLabel:
                text : "Joining Date "
                font_size : "15sp"
                font_name : "Poppins Bold 700.ttf"
                pos_hint : {"right": 0.59,"top": 0.99}
                color: rgba(0,0,72, 255)
            MDTextField:
                id: passwrd
                hint_text: "password*"
                password: "true"
                mode: "round"
                font_size:"12dp"
                icon_left : "lock"
                icon_left_color : app.theme_cls.primary_color
                pos_hint : {'center_x': 0.54, 'center_y': 0.61}
                size_hint_x : None
                width : 175

            MDBoxLayout:
                orientation:"horizontal"
                size_hint_y: None
                height: self.minimum_height
                pos_hint:{"center_x": 0.5, "center_y": 0.4}
                MDCheckbox:
                    id: password_checkbox
                    pos_hint: {"center_x": 0.5, "center_y": 0.4}
                    size_hint: None, None
                    size: dp(48), dp(48)
                    on_active: app.toggle_password_visibility(passwrd)

            Spinner:
                id:  spinner_id2
                size_hint: None, None
                size: dp(150), dp(30)
                text: "Select"
                background_color: "blue"
                pos_hint: {"center_x": 0.59, "center_y": 0.16}
                font_size: "18dp"
                values: ["Male", "Female", "Others"]


            MDLabel:
                text : "Gender "
                font_size : "15sp"
                font_name : "Poppins Bold 700.ttf"
                pos_hint : {"right": 0.61,"top": 0.67}
                color: rgba(0,0,72, 255)
            Spinner:
                id: spinner_id1
                size_hint: None, None
                size: dp(150), dp(30)
                text: "Select"
                background_color: "blue"
                pos_hint: {"center_x": 0.59, "center_y": 0.07}
                font_size: "18dp"
                values: ["Admin", "Teaching Employee", "Non-Teaching Employee"]


            MDLabel:
                text : "Employee type "
                font_size : "15sp"
                font_name : "Poppins Bold 700.ttf"
                pos_hint : {"right": 0.61,"top": 0.57}
                color: rgba(0,0,72, 255)
            MDLabel:
                text : "-------------------------------OR------------------------------- "
                font_size : "12sp"

                pos_hint : {"right": 0.80,"top": 0.37}
                color: rgba(0,0,72, 255)
            MDLabel:
                text : "Already have an account ?"
                font_size : "13sp"

                pos_hint : {"right": 0.80,"top": 0.32}
                color: rgba(0,0,72, 255)
            MDTextButton:
                text : "Login"
                font_size : "14sp"
                font_name : "Poppins Bold 700.ttf"
                pos_hint : {"right": 0.75,"top": -0.16}
                color: rgba(0,102, 51)
                on_press:root.manager.current='login'
