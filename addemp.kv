MDScreen:
    name:"add_employee"
    BoxLayout:
        size_hint: (1, 1)
        padding: 10
        orientation:"vertical"
        MDLabel:
            id:name
            color: rgba(0, 0, 200, 255)
            markup: True
            text:"Name"


        
    MDRoundFlatButton:
        text:"Accept"
        font_size:"12sp"
        pos_hint: {"center_x": 0.5, "center_y": 0.04}
        pos:100,100
        width:dp(250)
        on_press:app.show()
        
    MDRoundFlatButton:
        text:"Reject"
        align:"center"

        text_color: 0, 0, 1, 1
        color: rgba(0, 0, 200, 255)
        font_size: "12sp"
        pos_hint: {"center_x": 0.8, "center_y": 0.04}
        pos:200,200
        width:dp(250)
        
        
                