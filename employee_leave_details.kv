MDScreen:
    name: "emp_leave_details"
    MDGridLayout:
        cols:1
        size_hint: 5,5
        pos_hint: {"center_x":1,"center_y":0.65}
        Image:
            source: "pexels-codioful-(formerly-gradienta)-7130498.jpg"
    MDIconButton:
        icon: "arrow-left"
        pos_hint: {"center_x": 0.05, "center_y": 0.98}
        user_font_size: "30sp"
        theme_text_color: "Custom"
        text_color: rgba(26, 24, 58, 255)
        on_release:
            app.on_click_non_teaching_leave_list()
            app.on_click_teaching_leave_list()

            root.manager.transition.direction = 'right'
            root.manager.current = 'leave_list'
