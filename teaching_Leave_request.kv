<DrawerClickableItem@MDNavigationDrawerItem>
<DrawerLabelItem@MDNavigationDrawerItem>
MDScreen:
    name:"teaching_Leave_request"
    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                MDTopAppBar:
                    title:"LEAVE SYSTEM APP"
                    elevation:4
                    pos_hint:{"top":1}
                    left_action_items:[['menu',lambda x:nav_drawer.set_state("open")]]
                MDBoxLayout:

                    size_hint:0.5,0.5
                    orientation:"vertical"


                    pos_hint: {'center_x': 0.3, 'center_y': 0.5}
                    padding: 5
                    spacing: 5
                    MDLabel:
                        text:"Leave Type"

                    Spinner:
                        id:leave_types
                        text:"Select"
                        values:["Casual Leave","Medical Leave","Earned Leave","Child Care Leave","Maternity Leave","Duty Leave","Sick Leave","Others"]

                    MDLabel:
                        text: "From"

                    MDTextField:
                        id:fdate
                        markup: True
                        hint_text: "YYYY-MM-DD"
                        helper_text_mode: "persistent"
                        mode: "round"
                        pos_hint: {"center_x": 0.5, "center_y": 0.3}
                        size_hint: (1, None)
                        height: 300

                    MDLabel:
                        text: "To"

                    MDTextField:
                        id:tdate
                        markup: True
                        hint_text: "YYYY-MM-DD"
                        helper_text_mode: "persistent"
                        mode: "round"
                        pos_hint: {"center_x": 0.5, "center_y": 0.3}
                        size_hint: (1, None)
                        height: 300

                    MDLabel:
                        text: "Reason"

                MDTextField:
                    id:reason
                    markup: True
                    hint_text: "Write your reason for leave request"
                    helper_text_mode: "persistent"
                    mode: "rectangle"
                    size:self.size

                    pos_hint: {"center_x": 0.5, "center_y": 0.2}

                MDIconButton:
                    icon : "arrow-left"
                    pos_hint :{"center_x": 0.1, "center_y": 0.8}
                    user_font_size: "30sp"
                    theme_text_color: "Custom"
                    text_color : rgba(26, 24, 58, 255)
                    on_release:
                        root.manager.transition.direction = 'right'
                        root.manager.current = 'mainscreen'

                MDRoundFlatButton:
                    id:send_request
                    text:"Send request"
                    pos_hint :{"center_x": 0.5, "center_y": 0.1}
                    on_press:app.send_leave_request(leave_types,fdate,tdate,reason)




        MDNavigationDrawer:
            id:nav_drawer
            MDNavigationDrawerMenu:
                MDNavigationDrawerHeader:
                    title:"LEAVE SYSTEM APP"
                    text:"Employee Name"
                    spacing:"4dp"
                    padding:"12dp",0,0,"32dp"
                MDNavigationDrawerLabel:
                    text:"Menu"
                DrawerClickableItem:
                    icon:"gmail"
                    text:"Leave Request"
                    on_press:root.manager.current = 'leave_request'

                DrawerClickableItem:
                    icon:"gmail"
                    text:"Edit Leave Request"
                    on_press:root.manager.current = 'view_edit'

                DrawerClickableItem:
                    icon:"gmail"
                    text:"Show Leave Balance"
                    on_press:root.manager.current = 'view_leave_balance'

                MDNavigationDrawerLabel:
                    text:"other"
                DrawerLabelItem:
                    icon:"send"
                    text:"Log-out"



