MDScreen:
    name: "emp_detail"
    MDGridLayout:
        cols:1
        size_hint: 5,5
        pos_hint: {"center_x":1,"center_y":0.65}
        Image:
            source: "pexels-codioful-(formerly-gradienta)-7130498.jpg"

    MDIconButton:
        icon: "arrow-left"
        pos_hint: {"center_x": 0.05, "center_y": 0.98}
        user_font_size: "30sp"
        theme_text_color: "Custom"
        text_color: rgba(26, 24, 58, 255)
        on_release:
            app.on_click_show_list()
            root.manager.transition.direction = 'right'
            root.manager.current = 'emp_list'

    MDFloatLayout:
        #md_bg_color: 186/255, 255/255, 255/255,1
        MDLabel:
            text : "Add/Remove Employee"
            font_size : "20sp"
            font_name : "Poppins Bold Italic 700.ttf"
            pos_hint : {"center_x":0.50,"center_y": 0.92}
            halign : "center"
            color: rgba( 32 ,32 , 32)

        MDLabel:
            text : "Employee ID :"
            font_size : "16sp"

            pos_hint : {"center_x":0.54,"center_y": 0.86}
            color: rgba(0,0,72, 255)
        MDLabel:
            id: empid
            text:"12345"
            pos_hint:{"center_x":0.98,"center_y":0.86}

        MDLabel:
            text : "Employee Name :"
            font_size : "16sp"

            pos_hint : {"center_x":0.54,"center_y": 0.8}
            color: rgba(0,0,72, 255)
        MDLabel:
            id: name
            text:"Joydeeps"
            pos_hint:{"center_x":0.98,"center_y":0.8}

        MDLabel:
            text : "Email:"
            font_size : "16sp"

            pos_hint : {"center_x":0.54,"center_y": 0.7}
            color: rgba(0,0,72, 255)
        MDLabel:
            id: email
            text:" Joy@gmail.com "
            pos_hint:{"center_x":0.98,"center_y":0.7}




        MDLabel:
            text : "Phone      :"
            font_size : "18sp"

            pos_hint : {"center_x":0.55,"center_y": 0.6}
            color: rgba(0,0,72, 255)

        MDLabel:
            id: phone
            text:" 23456789 "
            pos_hint:{"center_x":0.98,"center_y":0.6}

        MDLabel:
            text : "Gender             :"
            font_size : "18sp"

            pos_hint : {"center_x":0.55,"center_y": 0.5}
            color: rgba(0,0,72, 255)

        MDLabel:
            id: gender
            text:" male "
            pos_hint:{"center_x":0.98,"center_y":0.5}


        MDLabel:
            text : "Employee type     :"
            font_size : "18sp"

            pos_hint : {"center_x":0.55,"center_y": 0.4}
            color: rgba(0,0,72, 255)

        MDLabel:
            id: emp_type
            text:" science "
            pos_hint:{"center_x":0.98,"center_y":0.4}



        MDLabel:
            text : "Department     :"
            font_size : "18sp"

            pos_hint : {"center_x":0.55,"center_y": 0.3}
            color: rgba(0,0,72, 255)

        MDLabel:
            id: dept
            text:" science "
            pos_hint:{"center_x":0.98,"center_y":0.3}
        MDLabel:
            text : "Designation     :"
            font_size : "18sp"

            pos_hint : {"center_x":0.55,"center_y": 0.2}
            color: rgba(0,0,72, 255)

        MDLabel:
            id: desig
            text:" HOD "
            pos_hint:{"center_x":0.98,"center_y":0.2}


        MDFillRoundFlatButton:
            text: "Accept"
            size_hint: 0.3,0.05
            md_bg_color: "dodgerblue"
            pos_hint : {"center_x":0.24,"center_y": 0.1}
            on_press:
                app.add_emp(empid,emp_type.text)
                app.on_click_show_list()
                root.manager.current = 'emp_list'

        MDFillRoundFlatButton:
            text: "Reject"
            size_hint: 0.3,0.05
            md_bg_color: "red"
            pos_hint : {"center_x":0.70,"center_y": 0.1}
            on_press:
                app.rem_emp(empid)
                app.on_click_show_list()
                root.manager.current = 'emp_list'